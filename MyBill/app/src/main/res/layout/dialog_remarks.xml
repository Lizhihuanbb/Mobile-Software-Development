<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/white">
    <TextView
        android:id="@+id/dialog_remarks_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_addremarks"
        android:textSize="16sp"
        android:textColor="@color/black"/>
    <EditText
        android:id="@+id/dialog_remarks_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_remarks_tv"
        android:hint="@string/string_remarks"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textSize="14sp"
        android:background="@color/white">
        <requestFocus/>
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_remarks_et"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/dialog_remarks_btn_ensure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/diaglog_botton"
            android:text="@string/string_make_sure"
            android:textColor="@color/green_006400"
            android:textStyle="bold" />

        <Button
            android:id="@+id/dialog_remarks_btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/diaglog_botton"
            android:text="@string/string_cancel"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>